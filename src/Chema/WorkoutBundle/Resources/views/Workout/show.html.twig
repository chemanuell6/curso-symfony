{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Workout</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Activity</th>
                <td>{{ entity.activity }}</td>
            </tr>
            <tr>
                <th>Occurrencedate</th>
                <td>{{ entity.occurrenceDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ entity.hours }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('workoutcrud') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('workoutcrud_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
