{% extends '::base.html.twig' %}

{% block body -%}
    <h1 >Lista de Entrenamiento</h1>

    <div class="row top-buffer">
        <div class="span3">
            <a href="{{ path('workoutcrud_new') }}" class="btn btn-large btn-block btn-primary">
                Crear una nueva entrada
            </a>
        </div>
    </div>


    <div class="row top-buffer">
    <table class="table table-striped" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Activity</th>
                <th>Occurrencedate</th>
                <th>Hours</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('workoutcrud_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.activity }}</td>
                <td>{% if entity.occurrenceDate %}{{ entity.occurrenceDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.hours }}</td>
                <td>
                <ul>
                        <a href="{{ path('workoutcrud_show', { 'id': entity.id }) }}" class="btn btn-large btn-block btn-default">Mostrar</a>
                         <a href="{{ path('workoutcrud_edit', { 'id': entity.id }) }}" class="btn btn-large btn-block btn-inverse">Editar</a>             
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>      
    {% endblock %}
